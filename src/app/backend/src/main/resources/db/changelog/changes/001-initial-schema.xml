<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="001" author="vuege">
        <comment>Инициализация схемы базы данных Vuege</comment>
        
        <!-- Создание схемы для основных таблиц -->
        <sql>
            CREATE SCHEMA IF NOT EXISTS vuege;
        </sql>
        
        <!-- Создание схемы для ГИС данных -->
        <sql>
            CREATE SCHEMA IF NOT EXISTS gis;
        </sql>
        
        <!-- Создание схемы для исторических данных -->
        <sql>
            CREATE SCHEMA IF NOT EXISTS history;
        </sql>
        
        <!-- Установка схемы по умолчанию -->
        <sql>
            SET search_path TO vuege, gis, history, public;
        </sql>
        
    </changeSet>

</databaseChangeLog>
