<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004-create-positions-table" author="vuege">
        <createTable tableName="positions">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="organization_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="abolished_date" type="DATE">
                <constraints nullable="true"/>
            </column>
            <column name="hierarchy" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="responsibilities" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Внешний ключ -->
        <addForeignKeyConstraint baseTableName="positions" 
                                 baseColumnNames="organization_id" 
                                 constraintName="fk_positions_organization" 
                                 referencedTableName="organizational_units" 
                                 referencedColumnNames="id"/>

        <!-- Индексы -->
        <createIndex tableName="positions" indexName="idx_positions_title">
            <column name="title"/>
        </createIndex>
        
        <createIndex tableName="positions" indexName="idx_positions_organization">
            <column name="organization_id"/>
        </createIndex>
        
        <createIndex tableName="positions" indexName="idx_positions_hierarchy">
            <column name="hierarchy"/>
        </createIndex>
        
        <createIndex tableName="positions" indexName="idx_positions_active">
            <column name="is_active"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>