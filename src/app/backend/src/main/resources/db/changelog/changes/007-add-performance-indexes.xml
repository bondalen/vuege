<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="007-add-performance-indexes" author="bondalen">
        <comment>Добавление индексов для оптимизации производительности</comment>

        <!-- Индексы для organizational_units -->
        <createIndex tableName="organizational_units" indexName="idx_org_units_parent_id">
            <column name="parent_unit_id"/>
        </createIndex>

        <createIndex tableName="organizational_units" indexName="idx_org_units_type">
            <column name="type"/>
        </createIndex>

        <createIndex tableName="organizational_units" indexName="idx_org_units_historical_period">
            <column name="historical_period_id"/>
        </createIndex>

        <createIndex tableName="organizational_units" indexName="idx_org_units_location">
            <column name="location_id"/>
        </createIndex>

        <createIndex tableName="organizational_units" indexName="idx_org_units_name">
            <column name="name"/>
        </createIndex>

        <createIndex tableName="organizational_units" indexName="idx_org_units_founded_date">
            <column name="founded_date"/>
        </createIndex>

        <!-- Составной индекс для часто используемых запросов -->
        <createIndex tableName="organizational_units" indexName="idx_org_units_type_fictional">
            <column name="type"/>
            <column name="is_fictional"/>
        </createIndex>

        <!-- Индексы для persons -->
        <createIndex tableName="persons" indexName="idx_persons_historical_period">
            <column name="historical_period_id"/>
        </createIndex>

        <createIndex tableName="persons" indexName="idx_persons_first_name">
            <column name="first_name"/>
        </createIndex>

        <createIndex tableName="persons" indexName="idx_persons_last_name">
            <column name="last_name"/>
        </createIndex>

        <!-- Составной индекс для поиска по имени -->
        <createIndex tableName="persons" indexName="idx_persons_name_search">
            <column name="first_name"/>
            <column name="last_name"/>
        </createIndex>

        <!-- Индексы для positions -->
        <createIndex tableName="positions" indexName="idx_positions_organization">
            <column name="organization_id"/>
        </createIndex>

        <createIndex tableName="positions" indexName="idx_positions_title">
            <column name="title"/>
        </createIndex>

        <createIndex tableName="positions" indexName="idx_positions_historical_period">
            <column name="historical_period_id"/>
        </createIndex>

        <!-- Индексы для person_positions -->
        <createIndex tableName="person_positions" indexName="idx_person_positions_person">
            <column name="person_id"/>
        </createIndex>

        <createIndex tableName="person_positions" indexName="idx_person_positions_position">
            <column name="position_id"/>
        </createIndex>

        <createIndex tableName="person_positions" indexName="idx_person_positions_start_date">
            <column name="start_date"/>
        </createIndex>

        <createIndex tableName="person_positions" indexName="idx_person_positions_end_date">
            <column name="end_date"/>
        </createIndex>

        <!-- Составной индекс для активных должностей -->
        <createIndex tableName="person_positions" indexName="idx_person_positions_active">
            <column name="person_id"/>
            <column name="start_date"/>
            <column name="end_date"/>
        </createIndex>

        <!-- Индексы для geo_points -->
        <createIndex tableName="geo_points" indexName="idx_geo_points_lat_lng">
            <column name="latitude"/>
            <column name="longitude"/>
        </createIndex>

        <createIndex tableName="geo_points" indexName="idx_geo_points_name">
            <column name="name"/>
        </createIndex>

        <!-- Индексы для historical_periods -->
        <createIndex tableName="historical_periods" indexName="idx_historical_periods_start_date">
            <column name="start_date"/>
        </createIndex>

        <createIndex tableName="historical_periods" indexName="idx_historical_periods_end_date">
            <column name="end_date"/>
        </createIndex>

        <createIndex tableName="historical_periods" indexName="idx_historical_periods_name">
            <column name="name"/>
        </createIndex>

        <!-- Составной индекс для поиска по периоду -->
        <createIndex tableName="historical_periods" indexName="idx_historical_periods_period">
            <column name="start_date"/>
            <column name="end_date"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>